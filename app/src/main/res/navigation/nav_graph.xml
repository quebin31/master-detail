<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/posts_fragment">

    <fragment
        android:id="@+id/posts_fragment"
        android:name="co.ravn.kevin.masterdetail.ui.posts.PostsFragment"
        android:label="@string/posts"
        tools:layout="@layout/fragment_posts" >
        <action
            android:id="@+id/action_show_post_detail"
            app:destination="@id/post_detail_fragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/posts_fragment" />
    </fragment>
    <fragment
        android:id="@+id/post_detail_fragment"
        android:name="co.ravn.kevin.masterdetail.ui.postdetail.PostDetailFragment"
        android:label="@string/post_detail"
        tools:layout="@layout/fragment_post_detail" >
        <argument
            android:name="post_id"
            app:argType="string" />
    </fragment>
</navigation>